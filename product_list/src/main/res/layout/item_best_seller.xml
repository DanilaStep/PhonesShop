<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_bast_seller"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_shop">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cv_Phone1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        android:background="@drawable/bg_hot_and_best"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="14dp"
        android:layout_marginTop="21dp"
        >
        <FrameLayout
            android:id="@+id/flPhoneLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="16dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginStart="146dp"
                app:cardCornerRadius="15dp"

                app:cardBackgroundColor="@color/white">
            <ImageView
                android:id="@+id/iv_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:src="@drawable/ic_like_stroke"
                android:visibility="visible"
                android:padding="7dp"
                />
            </androidx.cardview.widget.CardView>
            <ImageView
                android:id="@+id/iv_Phone1"
                android:layout_width="185dp"
                android:layout_height="168dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:scaleType="fitXY"/>
        </FrameLayout>

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="21dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="$"
            app:layout_constraintTop_toBottomOf="@id/flPhoneLike"
            app:layout_constraintStart_toStartOf="parent"
            app:fontFamily="@font/mark_pro"/>
        <TextView
            android:id="@+id/tvOldPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="10sp"
            android:layout_marginStart="7dp"
            android:text="$"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/tvPrice"
            app:layout_constraintStart_toEndOf="@id/tvPrice"
            app:fontFamily="@font/mark_pro"/>
        <TextView
            android:id="@+id/tvNamePhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:textSize="10sp"
            android:layout_marginStart="21dp"
            app:layout_constraintTop_toBottomOf="@id/tvPrice"
            app:layout_constraintStart_toStartOf="parent"
            app:fontFamily="@font/mark_pro"/>
        


    </androidx.constraintlayout.widget.ConstraintLayout>

