<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clModel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dissmis">

    <ImageView
        android:id="@+id/ivModel"
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:layout_marginStart="25dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvModel"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/ivModel"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/galaxy_note_20_ultra" />

    <TextView
        android:id="@+id/tvPriceModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        tools:text="$ .00"
        android:textColor="#FF6E4E"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/ivModel"
        app:layout_constraintTop_toBottomOf="@id/tvModel" />

    <ImageView
        android:id="@+id/ivGarbage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="33dp"
        android:src="@drawable/ic_garbage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_carousel_minus_plus"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@id/ivGarbage"
        app:layout_constraintStart_toEndOf="@id/tvModel"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_minus" />

        <TextView
            android:id="@+id/ivNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:text="@string/_2"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/ivPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_plus" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>